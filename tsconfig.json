{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "incremental": true,
        "paths": {
            "@oratoria/ui": [
                "./packages/ui/src"
            ],
            "@oratoria/ui/*": [
                "./packages/ui/src/*"
            ],
            "@oratoria/lib": [
                "./packages/lib/src"
            ],
            "@oratoria/lib/*": [
                "./packages/lib/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        ".next"
    ]
}