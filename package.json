{
    "name": "oratoria",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "pnpm run --parallel dev",
        "build": "pnpm run --recursive build",
        "test": "pnpm run --recursive test",
        "lint": "pnpm run --recursive lint",
        "db:migrate": "pnpm --filter @oratoria/migrations run migrate",
        "db:generate": "pnpm --filter @oratoria/migrations run generate",
        "db:studio": "pnpm --filter @oratoria/migrations run studio",
        "clean": "pnpm run --recursive clean && rm -rf node_modules"
    },
    "devDependencies": {
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    }
}